generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Task {
  id        Int      @default(autoincrement()) @id
  name     String
  isDone Boolean? @default(false)
}
model User {
  id        Int     @id @default(autoincrement()) // Измените на Int и добавьте автогенерацию
  email     String  @unique
  password  String
}
